            li.span2
              a(href='#filter', data-option-value='.drama') Drama
            li.span2
              a(href='#filter', data-option-value='.Educational') Educational
            li.span2
              a(href='#filter', data-option-value='.exercise')  Exercise & Fitness
            li.span2
              a(href='#filter', data-option-value='.faith') Faith & Spirituality
            li.span2
              a(href='#filter', data-option-value='.fantasy') Fantasy
            li.span2
              a(href='#filter', data-option-value='.foreign') Foreign Films
            li.span2
              a(href='#filter', data-option-value='.horror') Horror
            li.span2
              a(href='#filter', data-option-value='.kids') Kids & Family
            li.span2
              a(href='#filter', data-option-value='.lgbt') LGBT
      .sapn8
        section#projects
          ul#thumbs
            each item in movies
              li.item-thumbs.span2.desig.amovie
                a.hover-wrap(href='/detail/#{item.movieId}')
                img(src='#{item.imageHttp}')
                p(href='/detail/#{item.movieId}') #{item.movieName.substr(0,10)}
