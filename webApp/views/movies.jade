                input.flexsearch--input(type="search", placeholder="search")
                input.flexsearch--submit(type="submit", value="âžœ")
    .row
      .span4
        nav#options.work-nav
          ul#filters.option-set(data-option-key='filter')
            li.span4
              a.selected(href='#filter', data-option-value='*') All Types
            li.span2
              a(href='#filter', data-option-value='.action') Action & Adventure
            li.span2
              a(href='#filter', data-option-value='.anime') Anime
            li.span2
              a(href='#filter', data-option-value='.comedy') Comedy
            li.span2
